<div id="product-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= title %></h4>
      </div>
      <%= form_for @expense, remote: true do |f| %>
        <div class="modal-body">

          <div class="row">
            <div class="form-group col-md-6">
              <%= f.label :type  %>
              <% binding.pry  %>
              <%= f.select :expense_type, Expense.expense_types.keys.to_a, {}, class: "form-control"%>
            </div>

            <div class="form-group col-md-6">
              <%= f.label :date  %>
              <%= f.date_field :date, class: "form-control" %>
            </div>
          </div>
          
          <div class="row">
            <div class="col-md-12">
              <%= f.label :concept %>
              <%= f.text_field :concept, class: "form-control" %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <%= f.label :category %>
              <%= f.select :category, options_for_select(Expense.categories), {} ,class: "form-control"%>
            </div>
          
            <div class="col-md-6">
              <%= f.label :amount %>
              <%= f.number_field :amount, class: "form-control" %>
            </div>
          </div>  
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
          <%= f.submit class: "btn btn-primary" %>          
        </div>
      <% end %>
    </div>
  </div>
</div>
